{
  "name": "Persistent Text Injector with File Tree",
  "version": "1.0",
  "manifest_version": 3,
  "description": "A sidebar that can inject text and show a file tree from a selected local folder.",
  "icons": {
    "128": "logo.png"
  },
  "action": {
    "default_icon": "logo.png",
    "default_title": "Toggle Text Injector"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["<all_urls>"],
  "permissions": []
}

